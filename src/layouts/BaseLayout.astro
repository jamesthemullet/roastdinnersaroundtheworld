---
import Header from "../components/header/header.astro";
import Footer from "../components/footer/footer.astro";
const { pageTitle, description, opengraphImage } = Astro.props;
import "./layout.css";
import "@fontsource/yellowtail";
import yellowtailWoff2 from "@fontsource/yellowtail/files/yellowtail-latin-400-normal.woff2?url";

import logo3 from "../images/logos/rdaw-logo-3.webp";

import { SEO } from "astro-seo";
---

<html lang="en">
  <head>
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={yellowtailWoff2}
      crossorigin="anonymous"
    />

    <meta charset="utf-8" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="viewport" content="width=device-width" />
    <SEO
      title={pageTitle || "Roast Dinners Around The World"}
      description={description ||
        "Emporer Gravy bringing you roast dinner reviews from around the world."}
      openGraph={{
        basic: {
          title: pageTitle || "Roast Dinners Around The World",
          type: "Article",
          image: opengraphImage || logo3,
        },
        optional: {
          description:
            description ||
            "Emporer Gravy bringing you roast dinner reviews from around the world.",
          siteName: "Roast Dinners Around The World",
        },
      }}
    />
    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-B65YEPXCGH"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-B65YEPXCGH");
    </script>
  </head>
  <body>
    <div class="page-container">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
