---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
const { pageTitle } = Astro.props;
import "./layout.css";
import "@fontsource/yellowtail";

import { Image } from "astro:assets";
import logo1 from "../images/logos/rdaw-logo-1.webp";
import logo2 from "../images/logos/rdaw-logo-2.webp";
import logo3 from "../images/logos/rdaw-logo-3.webp";
import logo4 from "../images/logos/rdaw-logo-4.webp";
import logo5 from "../images/logos/rdaw-logo-5.webp";
import logo6 from "../images/logos/rdaw-logo-6.webp";
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link
      rel='apple-touch-icon'
      sizes='180x180'
      href='/favicon/apple-touch-icon.png'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='32x32'
      href='/favicon/favicon-32x32.png'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='16x16'
      href='/favicon/favicon-16x16.png'
    />
    <link rel='manifest' href='/favicon/site.webmanifest' />
    <meta name='msapplication-TileColor' content='#da532c' />
    <meta name='theme-color' content='#ffffff' />
    <meta name='viewport' content='width=device-width' />
    <title>{pageTitle}</title>
  </head>
  <body>
    <div class='page-container'>
      <Header />
      <div class='logoandtitle'>
        <Image src={logo3} alt='A bird.' width='200' height='200' />
        <h1>Roast Dinners Around The World</h1>
      </div>
      <h2>{pageTitle}</h2>
      <p>Roast dinner reviews.</p>
      <slot />
      <Footer />
    </div>
  </body>
</html>
