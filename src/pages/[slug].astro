---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import "./post.css";

export async function getStaticPaths() {
  const response = await fetch(
    "https://www.roastdinnersaroundtheworld.com/graphql",
    {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        query: `
        query AllSlugs {
          posts {
            nodes {
              slug
            }
          }
        }
        `,
      }),
    }
  );

  const { data } = await response.json();

  const posts = data.posts.nodes;

  const paths = posts.map((post) => {
    return { params: post };
  });

  return paths;
}

const { slug } = Astro.params;

const singleResponse = await fetch(
  "https://www.roastdinnersaroundtheworld.com/graphql",
  {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      query: `
        query SinglePost($id: ID = "${slug}") {
          post(idType: SLUG, id: $id) {
            date
            content
            title
            featuredImage {
              node {
                sourceUrl
                srcSet
              }
            }
            customfields {
              country
              rating
            }
            seo {
              opengraphTitle
              opengraphDescription
              opengraphSiteName
              opengraphImage {
                uri
                altText
                mediaDetails {
                  file
                  height
                  width
                }
                mediaItemUrl
                sourceUrl
                srcSet
              }
            }
          }
        }
        `,
    }),
  }
);

const { data } = await singleResponse.json();

const singlePost = data.post;

console.log(20, singlePost.featuredImage.srcSet);
---

<BaseLayout
  pageTitle={singlePost.title}
  description={singlePost.seo.opengraphDescription}
  opengraphImage={singlePost.seo.opengraphImage.sourceUrl}
>
  <Image
    src={singlePost.featuredImage.node.sourceUrl}
    alt={singlePost.title}
    width={3000}
    height={3000}
    class="featured-image"
    loading="eager"
    srcset={singlePost.featuredImage.node.srcSet}
    sizes=`(max-width: 600px) 100vw, (max-width: 1200px) 50vw, 33vw`
  />
  <div class="container">
    <h2>{singlePost.title}</h2>
    <div set:html={singlePost.content} />
    <p>
      <strong>Rating:</strong>
      {singlePost.customfields.rating}
    </p>
    <p>
      <strong>Country:</strong>
      {singlePost.customfields.country}
    </p>
    <p>
      <strong>Year visited:</strong>
      {new Date(singlePost.date).getFullYear()}
    </p>
  </div>
</BaseLayout>
